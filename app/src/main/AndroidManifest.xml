<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.software.darkheart.mymoney">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PeriodFormActivity" />
        <activity
            android:name=".IncomeSpendsActivity"
            android:label="@string/title_activity_income_spends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".IncomeActivity"
            android:label="@string/title_activity_income"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>